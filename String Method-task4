#changing the case methods...
text = 'PyThon ProGramminG is Easy to learn'
print("\nConverted String:")
print(text.upper())
print("\nConverted String:")
print(text.lower())
print("\nConverted String:")
print(text.title())
print("\nConverted String:")
print(text.swapcase())
print("\nConverted String:")
print(text.capitalize())
print("\nOriginal String")
print(text)
